@{
    ViewBag.Title = "Home Page";
}

@section styles {
    <link rel="stylesheet" href="~/assets/plugins/fancybox/source/jquery.fancybox.css">   
}

@section scripts {
    <script type="text/javascript" src="~/assets/plugins/fancybox/source/jquery.fancybox.pack.js"></script>
    <!-- JS Customization -->
    <script type="text/javascript" src="~/assets/js/custom.js"></script>
    <!-- JS Page Level -->
    <script type="text/javascript" src="~/assets/js/app.js"></script>
    <script type="text/javascript" src="~/assets/js/plugins/fancy-box.js"></script>
    
    <script type="text/javascript">
        FancyBox.initFancybox();
    </script>
}

<div class="container content">
    <div class="text-center margin-bottom-50">
        <h2 class="title-v2 title-center">Gallery of Images</h2>
        <p class="space-lg-hor">
            @*If you are going to use a <span class="color-green">passage of Lorem Ipsum</span>, you need to be sure there isn't anything embarrassing hidden in the middle of text. All the Lorem Ipsum generators on the Internet tend to repeat predefined chunks as necessary, making <span class="color-green">this the first</span> true generator on the Internet.*@
        </p>
    </div>
    @{ 
        int picIndex = 0;
        int i = picIndex;
    }

    @while (picIndex <= ViewBag.Count)
    {
        <div class="row  margin-bottom-30">

            @for (; i < picIndex + 3; i++)
            {
                if (i < ViewBag.Count)
                {
                    <div class="col-sm-3 sm-margin-bottom-30">
                        <a title="@ViewBag.Images[i]" class="fancybox img-hover-v1" rel="gallery2" href="@ViewBag.Images[i]">
                            <span>
                                <img alt="" src="@ViewBag.Images[i]" class="img-responsive">
                            </span>
                        </a>
                    </div>
                }
            }
            @{ 
                picIndex += 4;
                i = picIndex;
            }

        </div>
    }
</div>