@{
	ViewBag.Title = "Home Page";
}

@Html.Partial("slider")

<!--=== Purchase Block ===-->
<div class="purchase">
	<div class="container">
		<div class="row">
			<div class="col-md-9 animated fadeInLeft">
				<span>The Judge Waddell Endowed Scholarship Fund</span>
				<p>Highlands students are eligible for the scholarship and we encourage you to apply.</p>				
				<p>Scholarship awards are determined by an Advisory Committee made up of people who know and love the Highlands tradition. They select “student-athletes” who have demonstrated athleticism, character and intellect, and intend to pursue a career in education.</p>
			</div>
			<div class="col-md-3 btn-buy animated fadeInRight">
				<a href="~/Content/pdf/2020 Application.pdf"  class="btn-u btn-u-lg">
					<i class="fa fa-cloud-download"></i> Apply Today
				</a>
			</div>
		</div>

	</div>
</div><!--/row-->
<!-- End Purchase Block -->
<div class="row">
	<div class="col-md-9">
		<p>&nbsp;</p>
		<p class="alert alert-danger">
			You must submit your application for this years scholarhip before May 1, 2020.
			<br />
			Due to Covid-19, the deadline has been extended for 2020 to May 1, 2020.
			<br />
			<a href="~/Content/pdf/2020 Application.pdf">
				<i class="fa fa-cloud-download"></i> Apply Today
			</a>
		</p>
	</div>
</div>

<!--=== Content Part ===-->
<div class="container content-sm">
	<!-- Service Blocks -->
	<div class="row margin-bottom-30">
		<div class="col-md-4">
			<div class="service">
				<i class="fa fa-bullhorn service-icon"></i>
				<div class="desc">
					<h4>
						@Html.ActionLink("Scholarship Endowment Set to Double", "Index", "news", null, new { @class="text-warning" } )
					</h4>
					<p>
						The Ewell “Judge” Waddell Endowed Scholarship Fund has received gifts from the Waddell 
						family that will potentially more than double the size of the Scholarship’s endowment
					</p>
					<p>
						@Html.ActionLink("Read more in the news", "Index", "news")
					</p>
				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="service">
				<i class="fa fa-compress service-icon"></i>
				<div class="desc">
					<h4>Donations</h4>
					<p>
						We hope you will help us in this effort. Your gift will help remember a great man, help perpetuate the intellectual
						and athletic values we all believe in, help young people improve and complete themselves, and help supply the teachers,
						coaches and mentors that future generations of young people will need. We think that’s a great investment.
					</p>
					<p>
						@Html.ActionLink("Donate Now", "Donate", "About")
					</p>					
				</div>
			</div>
		</div>
		<div class="col-md-4">
			<div class="service">
				<i class="fa fa-cogs service-icon"></i>
				<div class="desc">
					<h4>Scholarship</h4>
					<p>
						Scholarship recipients will be “student-athletes” who have demonstrated athleticism, character and intellect, and
						intend to pursue a career in education. Recipients will be chosen by an Advisory Committee made up of people who
						know and love the Highlands tradition.
					</p>
					<p>
						@Html.ActionLink("Read a letter from Dr. Homer Rice to learn more", "riceletter", "about")
					</p>
				</div>
			</div>
		</div>

	</div>
	<!-- End Service Blokcs -->
	<!-- Recent Works -->
	<div class="headline"><h2>Recent Waddell Scholars</h2></div>
	<div class="row margin-bottom-20">
		<div class="col-md-3 col-sm-6">
			<div class="thumbnails thumbnail-style thumbnail-kenburn">
				<div class="thumbnail-img">
					<div class="overflow-hidden">
						<span class="dropcap">Nathaniel</span>
					</div>
					<a class="btn-more hover-effect" href="@Url.Action("Index", "Scholars")">more +</a>
				</div>
				<div class="caption">
					<h3><a class="hover-effect" href="/Scholars">2019: Nathaniel Roberts  </a></h3>
					<p>
						At various points in his Highlands career, Nathaniel was Mr. Highlands Football, selected as Offensive 
						Dominator, and given the Triple Threat Award. He lettered in three different sports, and
						maintained a cumulative 3.7 GPA on the academic side. 
					</p>
				</div>
			</div>
		</div>

		@* 2014: Mallory Seidel *@
		<div class="col-md-3 col-sm-6">
			<div class="thumbnails thumbnail-style thumbnail-kenburn">
				<div class="thumbnail-img">
					<div class="overflow-hidden">
						<span class="dropcap">Will</span>
					</div>
					<a class="btn-more hover-effect" href="@Url.Action("Index", "Scholars")">more +</a>
				</div>
				<div class="caption">
					<h3><a class="hover-effect" href="/Scholars">2019: Will James Salmon </a></h3>
					<p>
						Will personifies the student-athlete profile the Scholarship seeks to support. 
					</p>
				</div>
			</div>
		</div>

		<div class="col-md-3 col-sm-6">
			<div class="thumbnails thumbnail-style thumbnail-kenburn">
				<div class="thumbnail-img">
					<div class="overflow-hidden">
						<span class="dropcap">Claudia</span>
					</div>
					<a class="btn-more hover-effect" href="@Url.Action("Index", "Scholars")">more +</a>
				</div>
				<div class="caption">
					<h3><a class="hover-effect" href="/Scholars">2017: Claudia Hils</a></h3>
					<p>
						Claudia was an outstanding student-athlete at Highlands, with a 
						concentration in soccer. 
					</p>
				</div>
			</div>
		</div>

		@* end row *@
	</div>


	<!-- End Recent Works -->
